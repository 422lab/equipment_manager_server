<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <servlet>
        <servlet-name>GetDeviceStateServlet</servlet-name>
        <servlet-class>com.lab422.manager.servlet.GetDeviceStateServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GetDeviceStateServlet</servlet-name>
        <url-pattern>/getDeviceState</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UserLoginServlet</servlet-name>
        <servlet-class>com.lab422.manager.servlet.UserLoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserLoginServlet</servlet-name>
        <url-pattern>/userLogin</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>SelectDeviceServlet</servlet-name>
        <servlet-class>com.lab422.manager.servlet.SelectDeviceServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SelectDeviceServlet</servlet-name>
        <url-pattern>/selectDevice</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>UseDeviceServlet</servlet-name>
        <servlet-class>com.lab422.manager.servlet.UseDeviceServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UseDeviceServlet</servlet-name>
        <url-pattern>/useDevice</url-pattern>
    </servlet-mapping>

</web-app>